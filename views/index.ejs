<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>payment portal</title>
    <script>
        function validate(){
            //console.log("in validate");
            //alert("hellppp");
            const email = document.forms["main-form"]["email"].value;
            const phone = document.forms["main-form"]["phone"].value;
            const amount = document.forms["main-form"]["cost"].value;
           // console.log(email , phone , amount);
            if (email == "" && phone == ""){
                alert("please fill out atleast email or phone number");
                return false;
            }else{
                if (phone.length < 10){
                    var ph = document.querySelector('#phone');
                    ph.style.border = '1px solid red';
                    return false;
                }
                return true;
            }
        }
    </script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=Array.from%2CPromise%2CSymbol%2CObject.setPrototypeOf%2CObject.getOwnPropertySymbols"></script>
    <script src="https://cdn.jsdelivr.net/npm/superagent"></script>
    <link rel="stylesheet" href ="./stylesheets/first.css">
</head>

<body>
    <% include partials/menu %>
    
   <div id = "container">
       <div id = "form-container">
           <h2 style="text-align: center">Payment form for Practo Technologies</h2>
           <form name = "main-form" method="GET" action="second" onsubmit="return validate()">
            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" class="form-control" id="email"
                 name = "email" placeholder="name@example.com">
            </div>
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="number" class = "form-control" id = "phone"
                     name="phone" placeholder="enter your phone number">
            </div>
            <div class = "form-group">
                <label for="amount">Enter Amount to be paid</label>
                <input type ="number" class = "form-control" id = "amount"
                    name = "cost" placeholder="enter value in INR" required>
            </div>
            <div class = "form-group" style="text-align: center">
                <button type="submit" class = "btn btn-success "><h4>Submit</h4></button>
                <button type = "reset" class="btn btn-danger"><h4>Cancel</h4></button>
            </div>
          </form>
        </body>
       </div>
   </div>
</html>
